---
import { Icon } from 'astro-icon'
import Skill from '../components/Skill.astro'
---

<div class="section">
    <div class="box columns">
        <div class="column is-3">
            <figure class="main center">
                <Icon name="entypo:code"></Icon>
            </figure>
            <h1 class="title center">Programming</h1>             
        </div>
        <div class="column is-2">
            <Skill
                title="Python"
                imgsrc="logos:python"
            />
        </div>
        <div class="column is-2">
            <Skill
                title="C++"
                imgsrc="logos:c-plusplus"
            />
        </div>
    </div>
</div>

<style>
    .box {
        background-color: #272822;
    }

    .main {
        width: 256px;
        height: 256px;
        border-radius: 90%;
        background-color: purple;
    }

    .icon {
        width: 90%;
    }

    .center {
        margin: auto;
        text-align: center;
    }
</style>