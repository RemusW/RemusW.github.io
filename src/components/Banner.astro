---
import { Icon } from 'astro-icon'
---

<section class="hero is-large">
	<div class="hero-head"></div>
  
	<div class="hero-body">
	  <div class="container has-text-centered">
		<div></div>
		<p class="title white is-1">
		  <span class="is-danger">Remus Wong</span>
		  <!-- Remus Wong -->
		</p>
		<p class="subtitle white is-4">
		  Software Engineer - Technical Artist
		</p>
	  </div>
	</div>
  </section>

  <style>
	.hero {
		background-image: url('/heightmap.jpg');
        width: 100%;
		height: 100%;
        background-position: center;
        background-repeat: no-repeat;
	}

    .white {
        color: white
    }

	.gradient {
		background-image: linear-gradient(0deg, #3b3c35, #f52668);
		/* background-size: cover;
		pointer-events: none;
		mix-blend-mode: screen; */
		width: 100%;
		height: 100%;
		/* position: absolute;
		top: 0;
		left: 0;
		z-index: 2; */
	}

	.text-gradient {
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}
  </style>
